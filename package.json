{
  "name": "vue-component-library-template",
  "version": "1.0.0",
  "description": "Default template used for creating vue3 component libraries",
  "author": "Geirr Winnem <gwinnem@gmail.com>",
  "license": "ISC",
  "keywords": [
    "typescript",
    "es6",
    "plugin",
    "vite",
    "vue 3",
    "vue component library"
  ],
  "main": "dist/vue-component-library-template.umd.js",
  "module": "dist/vue-component-library-template.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/vue-component-library-template.es.js",
      "require": "./dist/vue-component-library-template.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gwinnem/vue-component-library-template.git"
  },
  "bugs": {
    "url": "https://github.com/gwinnem/vue-component-library-template/issues"
  },
  "scripts": {
    "dev": "vite --open --force --host",
    "build": "vite build && npm run build:types",
    "build:types": "vue-tsc --project tsconfig.build-types.json --declaration --emitDeclarationOnly --outDir dist/types ",
    "typecheck": "vue-tsc --project tsconfig.build-types.json --noEmit",
    "lint": "eslint --ext .js,.ts,.vue ./",
    "lint:style": "npx stylelint src/**/*.{scss,vue} --no-fix",
    "lint:fix": "eslint --fix ."
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "@vue/tsconfig": "^0.7.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-quotes": "^0.0.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "sass": "^1.86.3",
    "stylelint": "^16.18.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.1",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^10.1.3",
    "vue-theme": "^0.1.1",
    "vue-tsc": "^2.2.8"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
